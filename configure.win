if test -z "${JAGS_ROOT}"; then
    echo "**************************************************"
    echo "You need to set the variable JAGS_ROOT."
    echo ""
    echo "It should point to the installation folder of JAGS"
    echo "with subfolders \"include\" and \"lib\" containing"
    echo "the JAGS headers and libraries, respectively"
    echo "**************************************************"
    exit 1
fi
